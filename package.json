{
  "name": "wizekit-slack-app-fe",
  "version": "1.0.0",
  "private": true,
  "description": "WizeKit Slack App Frontend",
  "repository": {
    "type": "git",
    "url": "https://github.com/wizeline/wizekit-slack-app-fe"
  },
  "author": "duc.nguyen@wizeline.com",
  "license": "MIT",
  "main": "src/index.tsx",
  "scripts": {
    "develop": "concurrently -r \"npm:type-check:watch\" \"npm:start\"",
    "start": "parcel ./src/index.html",
    "build": "npm run type-check && parcel build ./src/index.html --public-url '/'",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "clean": "npx rimraf debug-* .cache dist",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettify && npm run test"
    }
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 6.0.0"
  },
  "keywords": [
    "Typescript",
    "React",
    "Parcel"
  ],
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.2",
    "@types/react": "^17.0.21",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.2.1",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "jest-extended": "^0.11.5",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.3"
  }
}
